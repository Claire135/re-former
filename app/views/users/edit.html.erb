<h1>Edit your User Details</h1>

<%= form_with model: @user, method: :patch do |form| %>
    <% @user.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <% @user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
    <% end %>

    <% @user.errors.full_messages_for(:password).each do |message| %>
        <div><%= message %></div>
    <% end %>
    
    <div>
        <%= form.label :username %><br>
        <%= form.text_field :username %>

    </div>

    <div>
        <%= form.label :email %><br>
        <%= form.email_field :email, placeholder: "name@example.com"%>
    </div>

    <div>
        <%= form.label :password %><br>
        <%= form.password_field :password, placeholder: "Don't use ABC123" %>
    </div>

    <div>
        <%= form.submit "Update" %>
    </div>
<% end %>
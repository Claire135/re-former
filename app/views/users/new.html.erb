<%= form_with model: @user, method: :post do |form| %>
    <div>
        <%= form.label :username %><br>
        <%= form.text_field :username %>
    </div>

    <div>
        <%= form.label :email %><br>
        <%= form.email_field :email, placeholder: "name@example.com"%>
    </div>

    <div>
        <%= form.label :password %><br>
        <%= form.password_field :password, placeholder: "Don't use ABC123" %>
    </div>

    <div>
        <%= form.submit "Sign Up" %>
    </div>
<% end %>